<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.ComputerGameFragment">

    <LinearLayout
        android:id="@+id/computerLayout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/compStone"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:rotation="180"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/stone"/>

        <ImageButton
            android:id="@+id/compPaper"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:rotation="180"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/paper"/>

        <ImageButton
            android:id="@+id/compScissors"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:rotation="180"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/scissors"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:textStyle="bold"
        android:textSize="32sp"
        android:text="@string/make_your_move"/>


    <LinearLayout
        android:id="@+id/playerLayout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/playerStone"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/stone"/>

        <ImageButton
            android:id="@+id/playerPaper"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/paper"/>

        <ImageButton
            android:id="@+id/playerScissors"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/scissors"/>

    </LinearLayout>







</LinearLayout>